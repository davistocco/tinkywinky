generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id        String       @id @default(cuid())
  ref       String       @unique
  startTime DateTime
  endTime   DateTime?
  events    MatchEvent[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model MatchEvent {
  id          String   @id @default(cuid())
  timestamp   DateTime
  killer      String?
  victim      String
  weapon      String?
  isWorldKill Boolean  @default(false)
  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  matchId     String
  isTeamKill  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
